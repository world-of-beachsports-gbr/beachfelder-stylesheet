      {{> molecules-rating-detailed(rating-detailed_label:"Netz") }}
    </div>
    <div class="column column--12 column--xs-6 column--m-6 -spacing-outer-20">
      {{> molecules-rating-detailed(rating-detailed_label:"Umgebung") }}
