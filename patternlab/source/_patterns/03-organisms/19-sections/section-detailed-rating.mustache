  </div>
  <div class="row">
    <div class="column column--12 -align-center -spacing-outer-80">
      {{> molecules-button-secondary(button-secondary_label:"mehr Bewertungen", button-secondary_icon:"chevron-down")}}
    </div>
  </div>
