<ul class="list-beachcourt {{ styleModifier }}">
	{{# list-beachcourt }}
		<a href="#" class="list-beachcourt__link">
			<li class="list-beachcourt__item">
				<div class="list-beachcourt__image">
					<img src="{{ image }}" alt="{{ title }}" class="image">
				</div>
				<div class="list-beachcourt__title-container column--12 column--s-4">
					<h5 class="list-beachcourt__title">{{ title }}</h5>
					<p class="list-beachcourt__date"> hinzugef√ºgt am:<br>{{ added }} </p>
				</div>
				<div class="list-beachcourt__coordinates-container column--4 column--s-1">
					<h5 class="list-beachcourt__title">{{ coordinatesTitle }}</h5>
					<p class="list-beachcourt__coordinates"> {{ longitude }}<br>{{ latitude }} </p>
				</div>
				<div class="list-beachcourt__benefits column--3">
					<ul class="list-beachcourt__icon-list">
						{{# benefits }}
							<li><span class="icon icon--{{ icon }}"></span></li>
						{{/ benefits }}
					</ul>
				</div>
				<div class="list-beachcourt__action">
					<form action="#" class="list-beachcourt__form">
						{{> molecules-link-icon:list-beachcourt__button(button-icon_icon:"delete") }}
					</form>
				</div>
			</li>
		</a>
	{{/ list-beachcourt }}
</ul>
